{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">


    <h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter : </h1><br>
    <label for="inputUsername">Nom d'utilisateur</label><br>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus placeholder="Nom d'utilisateur" >
    <br><br>
    <label for="inputPassword">Mot de passe</label><br>
    <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Mot de passe">
    <br><br><br>
    <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    {% if error %}
    <b><div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div></b><br><br>
{% endif %}

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
